<div class="container">
  <div class="alert alert-primary" role="alert">
    <div>New game</div>
    <div><%=p @letters%>
  </div>
</div>
<div class="container-fluid">
  <form role="search" action="/score"  method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="result">
    <button class="btn btn-outline-success" value="Play" type="submit">Play</button>
  </form>
</div>
